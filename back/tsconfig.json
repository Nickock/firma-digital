{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "build",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
